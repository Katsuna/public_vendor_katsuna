<?xml version="1.0" encoding="utf-8"?>

<!-- Hotseat (We use the screen as the position of the item in the hotseat) -->
<favorites xmlns:launcher="http://schemas.android.com/apk/res-auto/com.katsuna.launcher">

    <appwidget
        launcher:packageName="com.katsuna.widgets"
        launcher:className="com.katsuna.widgets.commons.WidgetCollection"
        launcher:screen="0"
        launcher:x="0"
        launcher:y="0"
        launcher:spanX="5"
        launcher:spanY="4" />

    <!-- Dialer, Contacts, [All Apps], Messaging, Browser -->
    <favorite
        launcher:packageName="com.katsuna.calls"
        launcher:className="com.katsuna.calls.ui.activities.MainActivity"
        launcher:container="-101"
        launcher:screen="0"
        launcher:x="0"
        launcher:y="0" />
            
    <favorite
        launcher:packageName="com.katsuna.messages"
        launcher:className="com.katsuna.messages.ui.activities.MainActivity"
        launcher:container="-101"
        launcher:screen="1"
        launcher:x="1"
        launcher:y="0" />
            
    <favorite
        launcher:packageName="com.android.browser"
        launcher:className="com.android.browser.BrowserActivity"
        launcher:container="-101"
        launcher:screen="3"
        launcher:x="3"
        launcher:y="0" />
            
    <favorite
        launcher:packageName="com.android.camera2"
        launcher:className="com.android.camera.CameraActivity"
        launcher:container="-101"
        launcher:screen="4"
        launcher:x="4"
        launcher:y="0" />

</favorites>
